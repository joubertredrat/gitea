{{template "base/head" .}}
<div class="page-content organization new org">
	<div class="ui middle very relaxed page grid">
		<div class="column">
			<form class="ui form" action="{{.Link}}" method="post">
				{{.CsrfTokenHtml}}
				<h3 class="ui top attached header">
					{{.i18n.Tr "new_snippet"}}
				</h3>
				<div class="ui attached segment">
					{{template "base/alert" .}}
					<div class="inline required field {{if .Err_SnippetTitle}}error{{end}}">
						<label for="snippet_title">{{.i18n.Tr "snippet.snippet_title_holder"}}</label>
						<input id="snippet_title" name="snippet_title" value="{{.snippet_title}}" autofocus required>
						<span class="help">{{.i18n.Tr "snippet.snippet_title_helper"}}</span>
					</div>

					<div class="inline field {{if .Err_SnippetVisibility}}error{{end}}">
						<span class="inline required field"><label for="visibility">{{.i18n.Tr "snippet.settings.visibility"}}</label></span>
						<div class="inline-grouped-list">
							<div class="ui radio checkbox">
								<input class="hidden enable-system-radio" tabindex="0" name="visibility" type="radio" value="0" checked/>
								<label>{{.i18n.Tr "snippet.settings.visibility.public"}}</label>
							</div>
							<div class="ui radio checkbox">
								<input class="hidden enable-system-radio" tabindex="0" name="visibility" type="radio" value="1" />
								<label>{{.i18n.Tr "snippet.settings.visibility.limited"}}</label>
							</div>
							<div class="ui radio checkbox">
								<input class="hidden enable-system-radio" tabindex="0" name="visibility" type="radio" value="2" />
								<label>{{.i18n.Tr "snippet.settings.visibility.private"}}</label>
							</div>
						</div>
					</div>

					<div class="inline field">
						<label></label>
						<button class="ui green button">
							{{.i18n.Tr "snippet.create_snippet"}}
						</button>
						<a class="ui button" href="{{AppSubUrl}}/">{{.i18n.Tr "cancel"}}</a>
					</div>
				</div>
			</form>
		</div>
	</div>
</div>
{{template "base/footer" .}}
